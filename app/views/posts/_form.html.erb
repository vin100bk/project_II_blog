<%= form_for @post do |f| %>
	<div class="form_field<%= is_field_error(@new_form, @post, :title) %>">
		<%= get_field_error_message(@new_form, @post, :title).html_safe %>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	
	<div class="form_field<%= is_field_error(@new_form, @post, :body) %>">
		<%= get_field_error_message(@new_form, @post, :body).html_safe %>
		<%= f.label :body %>
		<%= f.text_area :body %>
	</div>
	<div class="form_submit">
		<%= f.submit "Save" %>
	</div>
<% end %>
